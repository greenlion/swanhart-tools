#! /bin/sh

# Test to make sure install-sh and mkinstalldirs correctly found in
# subdirs.

. $srcdir/defs || exit 1

mkdir zot

cat > configure.in << 'END'
PACKAGE=nonesuch
VERSION=nonesuch
AC_ARG_PROGRAM
AC_PROG_MAKE_SET
AM_PROG_INSTALL
AC_OUTPUT(Makefile zot/Makefile)
END

cat > Makefile.am << 'END'
SUBDIRS = zot
END

cat > zot/Makefile.am << 'END'
pkgdata_DATA =
END

$AUTOMAKE
