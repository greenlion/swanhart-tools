#! /bin/sh

# Test to make sure mkinstalldirs invocation correct in install-man
# target.  Bug reported by Gordon Irlam <gordoni@cygnus.com>.

. $srcdir/defs || exit 1

cat > Makefile.am << 'EOF'
man_MANS = frob.8
EOF

: > frob.8

$AUTOMAKE || exit 1

grep '[^(/]mkinstalldirs' Makefile.in && exit 1
exit 0
