#! /bin/sh

# Test for bug where ansi2knr.c is not included in distribution.
# From François Pinard.

. $srcdir/defs || exit 1

cat > Makefile.am << 'END'
AUTOMAKE_OPTIONS = ansi2knr
magic:
	@echo $(DISTFILES)
END

cat >> configure.in << 'END'
AM_C_PROTOTYPES
END

: > ansi2knr.c
: > ansi2knr.1

$AUTOMAKE || exit 1

$MAKE -s -f Makefile.in magic | grep 'ansi2knr\.c'
